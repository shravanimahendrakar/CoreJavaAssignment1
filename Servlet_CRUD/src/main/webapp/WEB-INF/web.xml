<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
	id="WebApp_ID" version="4.0">
	<display-name>Servlet_CRUD</display-name>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>

	<servlet>
		<servlet-name>Register</servlet-name>
		<servlet-class>com.app.RegisterationServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Register</servlet-name>
		<url-pattern>/register</url-pattern>
	</servlet-mapping>
	
	
	<servlet>
		<servlet-name>Update</servlet-name>
		<servlet-class>com.app.UpdateSalaryServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Update</servlet-name>
		<url-pattern>/update</url-pattern>
	</servlet-mapping>
	
	
	<servlet>
		<servlet-name>SelectById</servlet-name>
		<servlet-class>com.app.SelectByIdServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>SelectById</servlet-name>
		<url-pattern>/select</url-pattern>
	</servlet-mapping>
	
	
	<servlet>
		<servlet-name>SelectAll</servlet-name>
		<servlet-class>com.app.SelectAllServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>SelectAll</servlet-name>
		<url-pattern>/all</url-pattern>
	</servlet-mapping>

</web-app>